#include <iostream>

#include <iomanip>

#include <limits>

#include <string>

using namespace std;



struct Selection_Choices

{
    
    string choice1;
    
    string choice2;
    
    string choice3;
    
    string choice4;
    
};



Selection_Choices lemonade[4];

Selection_Choices cookies[4];

Selection_Choices shirts[3];

Selection_Choices sneakers[3];

Selection_Choices tacos[4];

Selection_Choices ticket[2];


int menu_1 = 1;

int menu_2 = 1;

int menu_3 = 1;

int menu_4 = 1;

int menu_5 = 1;

int menu_6 = 1;

double running_Total = 0;



void lemonade_Menu();

void cookie_Menu();

void shirt_Menu();

void sneakers_Menu();

void taco_Menu();

void ticket_Menu();

void purchase_Total();

void purchase_order(double);

void menu_check();



int main()

{
    
    int menu;
    
    cout << "\n\n\n\n\n\n\n\n\n\n \t EACH ITEM HAS A PURCHASE LIMIT DUE TO POPULAR DEMAND \n";
    
    cout << "\n\n Please Select From The Following Menu ";
    
    cout << "\n\n 1. Drink Menu " << endl;
    
    cout << "\n 2. Cookie Menu  " << endl;
    
    cout << "\n 3. Shirt Menu " << endl;
    
    cout << "\n 4. Sneakers Menu " << endl;
    
    cout<<  "\n 5. Taco Menu "<<endl;
    
    cout << "\n 6. Concert Ticket Menu" << endl;
    
    cout << "\n 7. Proceed To Check Out " << endl;
    
    cout << "\n 8. Exit " << endl;
    
    cout << "\n Current Selection .......     ";
    
    cin >> menu;
    
    
    
    switch (menu)
    
    {
            
        case 1:
            
            lemonade_Menu();
            
            break;
            
            
        case 2:
            
            cookie_Menu();
            
            break;
            
            
        case 3:
            
            shirt_Menu();
            
            break;
            
        case 4:
            
            sneakers_Menu ();
            
            break;
            
        case 5:
            
            taco_Menu();
            
            break;
            
        case 6:
            
            ticket_Menu();
            
            break;
            
        case 7:
            
            purchase_Total();
            
            break;
            
            
            
        case 8:
            
            exit(0);
            
            break;
            
            
            
        default:
            
            cout << "\n\n\n \t\t\t INVALID NUMBER - CHOOSE FROM 1 - 8 ";
            
            cout << " \n\n ";
            
            cout << " \t\t\t    PRESS ENTER TO CONTINUE ";
            
            cin.ignore(std::numeric_limits<streamsize>::max(), '\n');
            
            cin.get();
            
            main();
            
    }
    
    
    
    //system("pause");
    
    
    
    return 0;
    
}



void lemonade_Menu() // <Jason>

{
    
    menu_check();
    
    double price = 0;
    
    int menu;
    
    cout << "\n\n\n\n\n\n\n \t LIMIT IS 4 PER PERSON \n";
    
    cout << "\n\n Please Select From The Availible Cup Sizes ";
    
    cout << "\n\n 1. 8 oz  " << endl;
    
    cout << "\n 2. 12 oz " << endl;
    
    cout << "\n 3. 16 oz " << endl;
    
    cout << "\n 4. 24 oz" << endl;
    
    cout << "\n 5. Return To Main Menu " << endl;
    
    cout << "\n Current Selection .......     ";
    
    cin >> menu;
    
    
    
    switch (menu)
    
    {
            
            
            
        case 1:
            
            menu_1++;
            
            price = .50;
            
            for (int index = 0; index < menu_1; index++)
                
            {
                
                lemonade[0].choice1 = " Lemonade 8oz  = .50 ";
                
            }
            
            purchase_order(price);
            
            break;
            
            
            
        case 2:
            
            menu_1++;
            
            price = .75;
            
            for (int index = 0; index < menu_1; index++)
                
            {
                
                lemonade[1].choice2 = " Lemonade 12oz = .75 ";
                
            }
            
            purchase_order(price);
            
            break;
            
            
            
        case 3:
            
            menu_1++;
            
            price = 1.00;
            
            for (int index = 0; index < menu_1; index++)
                
            {
                
                lemonade[2].choice3 = " Lemonade 16oz = 1.00 ";
                
            }
            
            purchase_order(price);
            
            break;
            
        case 4:
            
            menu_1++;
            
            price = 1.25;
            
            for (int index = 0; index < menu_1; index++)
                
            {
                
                lemonade[3].choice4 = " Lemonade 24oz = 1.25 ";
                
            }
            
            purchase_order(price);
            
            break;
            
        case 5:
            
            main();
            
            break;
            
            
            
        default:
            
            cout << "\n\n\n \t\t\t INVALID NUMBER - CHOOSE FROM 1 - 4 ";
            
            cout << " \n\n ";
            
            cout << " \t\t\t    PRESS ENTER TO CONTINUE ";
            
            cin.ignore(std::numeric_limits<streamsize>::max(), '\n');
            
            cin.get();
            
            lemonade_Menu();
            
    }
    
}



