int main()

{
    
    int adventure;
    
    cout << "\n\n\t WELCOME TO TEAM ROCKET ADVENTURE GAME \n";
    
    cout << "\n\n \t Select Your Adventure: ";
    
    cout << "\n\n 1. Jason's Dungeon " << endl;
    
    cout << "\n 2. TORI'S GAME  " << endl;
    
    cout << "\n 3. MITCHELL'S GAME " << endl;
    
    cout << "\n Current Selection .......     ";
    
    cin >> adventure;
    
    
    
    switch (adventure)
    
    {
            
        case 1:
            
            jasonDungeon();
            
            break;
            
//
//        case 2:
//
//            toriGame();
//
//            break;
//
//
//        case 3:
//
//            mitchellGame();
//
//            break;
//
      
        default:
            
            cout << "\n\n\n \t\t\t INVALID NUMBER - CHOOSE FROM 1 - 3 ";
            
            cout << " \n\n ";
            
            cout << " \t\t\t    PRESS ENTER TO CONTINUE ";
            
            cin.ignore(std::numeric_limits<streamsize>::max(), '\n');
            
            cin.get();
            
    }
    
    
    
    //system("pause");
    
    
    
    return 0;
    
}



void jasonDungeon() // <Jason>

{
    
    int menu;
    
    cout << "\n\n\n\n\n\n\n \t WELCOME TO JASON'S DUNGEON \n";
    
    cout << "\n\n Your mission is to find the golden key and escape the dungeon... alive...  "<<endl;
    
    cout << "\n 1. Go Forward  " << endl;
    
    cout << "\n 2. Turn Right  " << endl;
    
    cout << "\n 3. END GAME " << endl;
    
    cout << "\n Current Selection .......     ";
    
    cin >> menu;
    
    
    
    switch (menu)
    
    {
            
        case 1:
            int choice;
            cout<< "\n You just encountered a dragon! What will you do?"<<endl;
            cout << "\n 1. Fight it using rocks  " << endl;
            cout << "\n 2. Turn Right and Run for it  " << endl;
            cin>> choice;
            
            switch (choice)
                {
                    case 1:
                        int lastShot;
                        cout<< "The rocks aren't working! The dragon is charging at you! HIDE!"<<endl;
                        cout << "\n 1. Hide in between big rocks " << endl;
                        cout << "\n 2. Run for your life!  " << endl;
                        cin>>lastShot;
                        
                        switch (lastShot)
                         {
                            case 1:
                                 cout<< "Good job! Dragon has left and as you step out you find a gem let's see what's inside..."<<endl;
                                 cout<< "*SPOOF*"<<endl;
                                 cout<< "The gem contains the key and it transported you out of the dungeon! MISSION ACCOMPLISHED!"<<endl;
                                break;
                            case 2:
                                 cout<< "The Dragon caught up! You're being eaten!"<<endl;
                                 cout<< "GAME OVER"<<endl;
                                 break;
                                 
                            default:
                                 cout<<"That's not a choice! GAME OVER!"<<endl;
                                break;
                        }
                        break;
                    case 2:
                        int choice;
                        cout<<"RUN!... You've encountered a jeep in the dungeon, hop in!"<<endl;
                        cout<< "\n 1. Drive towards the light!"<<endl;
                        cout<< "\n 2. Try to drive under the dragon!"<<endl;
                        cin>>choice;
                        
                        switch(choice)
                        {
                            case 1:
                                cout<<"The golden key is in the dashboard! You drove to the light and escaped!"<<endl;
                                cout<< "MISSION ACCOMPLISHED"<<endl;
                                break;
                            case 2:
                                cout<<"Dumb move... Dragon has eaten you..."<<endl;
                                cout<<"GAME OVER"<<endl;
                                break;
                            default:
                                cout<<"That's not a choice! GAME OVER!"<<endl;
                                break;
                        }
                        break;
                    default:
                        cout<<"That's not a choice! GAME OVER!"<<endl;
                        break;
                    }
                break;
        case 2:
            int secondChoice;
            cout<<"You found the key on the ground! But you look up and there's a venemous snake! What do you do?"<<endl;
            cout<<"\n 1. Kill with an ax ";
            cout<<"\n 2. Run";
            cin>>secondChoice;
            
            switch (secondChoice)
           {
                case 1:
                   cout<< "Good job! Now the exit is behind it! MISSION ACCOMPLISHED"<<endl;
                    break;
               case 2:
                   cout<< "Bruh... Snake caught up! You're dying!"<<endl;
                   cout<< "GAME OVER"<<endl;
                   break;
                default:
                   cout<<"That's not a choice! GAME OVER!"<<endl;
                   break;
            }
            break;
        case 3:
            cout<<"END GAME"<<endl;
            break;
            
        default:
        cout<<"That's not a choice! GAME OVER!"<<endl;
        break;
                
    }
    
    void mitchellGame() // <Mitchell>

{

	int menu;

	cout << "\n\n\n\n\n\n\n \t WELCOME TO THE FOREST OF MITCHELL \n";

	cout << "\n\n The goal is to locate and marry the princess  " << endl;

	cout << "\n 1. Enter forest using elven path  " << endl;

	cout << "\n 2. Enter forest using orc path  " << endl;

	cout << "\n 3. END GAME " << endl;

	cout << "\n Current Selection .......     ";

	cin >> menu;



	switch (menu)

	{

	case 1:
		int choice;
		cout << "\n A hot elf appears out of nowhere." << endl;
		cout << "\n 1. Make out with her " << endl;
		cout << "\n 2. Ask her for directions  " << endl;
		cin >> choice;

		switch (choice)
		{
		case 1:
			
			cout << "You two get married and live happily ever after. Although you failed the mission because it isn't the princess." << endl;
			
			
		case 2:
			
			cout <<"She tells you where the princess is located and you get married to her." << endl;
		
			
		default:
			cout << "That's not a choice! GAME OVER!" << endl;
			break;
		}
		break;
	case 2:
		int choiceTwo;
		cout << "You encounter an orc. What do you do?" << endl;
		cout << "\n 1. Kill with an ax ";
		cout << "\n 2. Run";
		cin >> choiceTwo;

		switch (choiceTwo)
		{
		case 1:
			cout << "You take a swing and end up missing. Game over :(" << endl;
			break;
		case 2:
			cout << "You run and eventually outrun the orc and find the hot princess!! Mission accomplished!" << endl;
			cout << "GAME OVER" << endl;
			break;
		default:
			cout << "That's not a choice! GAME OVER!" << endl;
			break;
		}
		break;
	case 3:
		cout << "END GAME" << endl;
		break;

	default:
		cout << "That's not a choice! GAME OVER!" << endl;
		break;

	}
   
 
} //end
